<!DOCTYPE html>
<html>
  <head>
    <title>Vensee</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
        <%= favicon_link_tag 'favicon (1).ico' %>

    <%= include_gon %>
    <%= stylesheet_link_tag "inter-font", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header class="bg-gradient-to-r from-blue-400">

  <div class="w-1/5 h-20 container mx-auto">
  <%= link_to image_tag("horizontal_on_white_by_logaster (1).png", class: 'rounded-full'), root_path%>
  </div>
    <div class="m-3 mx-16 inline-block">
  <button class="px-2 py-1 bg-blue-400 text-lg text-white font-semibold rounded hover:bg-blue-500">
  <%= link_to "投稿する", new_vender_path%>
  </button>


  <% if user_signed_in?%>
  <div class="ml-10 text-white text-1xl r-0 inline-block font-sans italic ">
  <%= "ようこそ、#{current_user.nickname}さん！"%>
  </div>
  <button class="px-2 py-1 bg-red-400 text-lg text-white font-semibold rounded hover:bg-red-500 ">
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete%>
  </button>

  <% else %>
  <%= link_to "新規登録", new_user_registration_path, class: 'ml-20 px-2 py-1 bg-yellow-400 text-lg text-white font-semibold rounded hover:bg-yellow-500'%>
  <%= link_to "ログイン", new_user_session_path, class: 'px-2 py-1 bg-green-800 text-lg text-white font-semibold rounded hover:bg-green-500'%>
  <% end %>
  </div>

  <div class="float-right mr-20 ">
  <%= form_with url: search_venders_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, class: "rounded border-purple-700", placeholder: "都道府県名を入力", value: @keyword %>
    <%= f.submit "検索", class: " bg-purple-500 hover:bg-purple-400 text-white font-bold py-2 px-4 border-b-4 border-purple-700 hover:border-purple-500 rounded" %>
    </div>
  <% end %>
  </div>
    </header>


    <%= yield %>
    <footer class=" text-center text-4xl text-blue-400 bg-gradient-to-r from-blue-400 ">
    by VenSee
    </footer>

  </body>
</html>
