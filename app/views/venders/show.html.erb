<div class="bg-gradient-to-r from-blue-400">
<div class="space-y-8 text-center">

<p class="text-center text-purple-500 text-4xl rounded border-blue-400 border-solid border-4 mx-64 p-2">自販機タイトル</p>
<div class="text-4xl text-purple-600 font-mono italic text-center ">
<%= @vender.title%>
</div>

<div id='map'>
<script>
let map
function initMap(){
  map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: <%= @vender.latitude %>, lng: <%= @vender.longitude %>},
    zoom: 15,
       zoomControl: false,
       mapTypeControl: false,
       fullscreenControl: false,
       streetViewControl: false,
  });

  marker = new google.maps.Marker({
    position: {lat: <%= @vender.latitude %>, lng: <%= @vender.longitude %>},
    map: map
  });
   geocoder = new google.maps.Geocoder()
}
</script>
  <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['GOOGLE_MAP_API'] %>&callback=initMap" async defer></script>
</div>

<p class="text-purple-500 text-4xl text-center rounded border-blue-400 border-solid border-4 mx-64 p-2 ">自販機画像</p>
<div class="flex justify-center p-10">
<%= image_tag(@vender.image)%>
</div>

<p class="text-center text-purple-500 text-4xl rounded border-blue-400 border-solid border-4 mx-64 p-2">住所</p>
<div class=" text-3xl">
<%= @vender.residence%>
</div>

<p class="text-purple-500 text-4xl rounded border-blue-400 border-solid border-4 mx-64 p-2">ジャンル</p>
<div class="text-3xl">
<%= @vender.genre.name%>
</div>

<p class="text-purple-500 text-4xl rounded border-blue-400 border-solid border-4 mx-64 p-2">自販機内容</p>
<div class="text-3xl">
<%= @vender.introduction%>
</div>
</div>

      <% if current_user == @vender.user%>
      <div class="text-center text-2xl mt-8 text-purple-500 hover:opacity-75">
          <%= link_to "編集する", edit_vender_path(@vender.id)%>
          <%= link_to "削除する", vender_path(@vender.id), method: :delete %>
        </div>
        </div>
        <% end %>
